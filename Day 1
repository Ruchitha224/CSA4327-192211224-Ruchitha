    <title>Alarm Clock</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #ecc43d;
            margin: 0;
            padding: 0;
        }
        .container {
            background-color: #26cdf7;
            border-radius: 20px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin: 50px auto;
            max-width: 400px;
        }
        h1 {
            color: #333;
        }
        #clock {
            font-size: 3em;
            margin-top: 20px;
            color: #333;
        }
        #alarmTime {
            margin-top: 20px;
            margin-bottom: 30px;
        }
        label {
            font-size: 1.2em;
            color: #130e0e;
        }
        input[type="time"] {
            padding: 8px 12px;
            font-size: 1em;
            border: 2px solid #050505;
            border-radius: 5px;
            margin-left: 10px;
        }
        #setAlarmButton, #deleteAlarmButton {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1em;
            cursor: pointer;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            text-align: center;
            display: inline-block;
            transition: background-color 0.3s;
        }
        #setAlarmButton:hover, #deleteAlarmButton:hover {
            background-color: #45a049;
        }
    </style>
